{
    "manifest_version": 3,
    "name": "Hej på Google Docs",
    "version": "1.0",
    "description": "Säger hej när du besöker Google Docs",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/document/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }