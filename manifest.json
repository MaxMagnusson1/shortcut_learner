{
  "manifest_version": 3,
  "name": "Shortcut-learner",
  "version": "1.0",
  "description": "Visar en hälsning nere i hörnet.",
  "permissions": [
    "activeTab",
    "tabs", 
    "scripting", 
    "webNavigation", 
    "bookmarks",
    "downloads", 
    "scripting", 
    "storage",
    "contextMenus", 
    "alarms"
  ],



  "background": {
    "service_worker": "js/background.js", 
    "type": "module"
  },

  "icons": {
    "16": "img/iconimg.svg",
    "48": "img/iconimg.svg",
    "128": "img/iconimg.svg"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/s-icon.png",
    "default_title": "Klicka för att säga Hej!"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
      "exclude_matches": ["*://docs.google.com/document*"],
      "js": [
        "js/shortcommand_div.js", 
        "js/content.js"

      ],
      "css": ["style.css"], 
      "run_at": "document_start"
    }
  ],

  "host_permissions": ["http://*/*", "https://*/*"],

  "web_accessible_resources": [
    {
      "resources": [
        "js/shortcommand_div.js",
        "js/reloadHandler.js",
        "js/urlHandler.js",
        "js/tabListener.js",
        "js/content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
